-- CREATED A TABLE WITH THE NAMES, DOB, AND OCCUPATION

CREATE TABLE Famous_People (id INTEGER PRIMARY KEY,
first_name TEXT,
last_name TEXT,
birthdate TEXT,
occupation integer);

